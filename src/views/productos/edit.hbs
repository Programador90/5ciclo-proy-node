<div class="container p-4" style="margin-top:70px ;">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">ACTUALIZAR PRODUCTO</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{producto.id}}" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text">Nombre</label>
                            <input class="form-control" type="text" name="nompro" id="nompro" placeholder="Nombres"
                                value="{{producto.nompro}}" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="quantity" class="input-group-text">Cantidad</label>
                            <input class="form-control" type="number" name="cantpro" id="cantpro" placeholder="Cantidad"
                                value="{{producto.cantpro}}" required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="price" class="input-group-text">Precio</label>
                            <input class="form-control" type="number" name="prepro" id="prepro"
                                value="{{producto.prepro}}" placeholder="" required>
                        </div>

                        <div class="input-group mt-2">
                            <label for="category" class="input-group-text">Categoría</label>
                            <input class="form-control" type="text" name="catpro" id="catpro" placeholder="Categoría"
                                value="{{producto.catpro}}" required>
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar</button>
                            <button class="btn btn-danger"><a class="nav-link  link-light" aria-current="page"
                                    href="/plist"> Cancelar</a></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


